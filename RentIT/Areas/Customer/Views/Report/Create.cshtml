@model ReportVM

<form method="post">
	<input asp-for="User.UserName" type="hidden" />
	<input asp-for="Report.UserId" type="hidden" />
	<input asp-for="Report.AdminId" type="hidden" />
	
	<div class="row">
		<div class="col-12">
			<div class="border p-3 mt-4">
				<div class="row pb-2">
					<h3>Report user</h3>
				</div>
				<hr />
				<div class="mb-3 row p-1">
					<label asp-for="User.UserName" class="p-0">User mail:</label>
					<input asp-for="User.UserName" type="text" class="form-control" disabled />
					<span asp-validation-for="User.UserName" class="text-danger"></span>
				</div>
				<div class="mb-3 col-3 row p-1">
					<label asp-for="Report.Description" class="p-0">Report description:</label>
					<input asp-for="Report.Description" type="text" class="form-control"/>
					<span asp-validation-for="Report.Description" class="text-danger"></span>
				</div>
				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">Report user</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Home" asp-action="Index" class="btn btn-light form-control">Back to items</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}