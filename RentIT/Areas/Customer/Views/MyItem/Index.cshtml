@model IEnumerable<Item>

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2>Availabe items today</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="MyItem" asp-action="Upsert" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Add your item!
			</a>
		</div>
	</div>

	<table id="tblData" class="table table-bordered table-striped" style="width:100%;">
		<thead>
			<tr>
				<th>
					Item name
				</th>
				<th>
					Description
				</th>
				<th>
					Borrowing time
				</th>
			</tr>
		</thead>
	</table>
</div>

@section Scripts{
	<script src="~/js/myItem.js"></script>
}